# Database Configuration (Already provided by Replit)
DATABASE_URL=postgresql://...

# Email Configuration (Optional - for SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@taxnify.co.za
SENDGRID_FROM_NAME=Taxnify

# PayFast Configuration (required)
PAYFAST_MERCHANT_ID=
PAYFAST_MERCHANT_KEY=
PAYFAST_PASSPHRASE=

# Stripe Configuration (Optional - for international payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLIC_KEY=pk_test_...
VITE_STRIPE_PUBLIC_KEY=pk_test_...

# Session Configuration
SESSION_SECRET=your_secure_session_secret_here

# Application Environment
NODE_ENV=development

# Replit Configuration (Automatically provided)
REPL_ID=your_repl_id
REPLIT_DOMAINS=your-repl-name.username.repl.co

# Stitch Banking Integration (Sandbox Mode)
STITCH_CLIENT_ID=your_stitch_sandbox_client_id
STITCH_CLIENT_SECRET=your_stitch_sandbox_client_secret
STITCH_WEBHOOK_SECRET=your_stitch_webhook_secret
STITCH_ENV=sandbox
STITCH_BASE_URL=https://api.stitch.money

# SARS Integration (Sandbox Mode)
SARS_CLIENT_ID=test_client_id
SARS_CLIENT_SECRET=test_client_secret
SARS_API_URL=https://secure.sarsefiling.co.za/api/v1
SARS_ENVIRONMENT=sandbox

# CIPC Integration (Test Mode)
CIPC_API_KEY=test_api_key
CIPC_CUSTOMER_CODE=test_customer_code
CIPC_ENVIRONMENT=sandbox

# Default to Sandbox/Test Mode for all integrations
INTEGRATION_MODE=sandbox